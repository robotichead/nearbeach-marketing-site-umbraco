@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@using Umbraco.Cms.Core.Models.Blocks;
@{
    var featureHeading = Model.Value("featureHeading");
    var featureText = Model.Value("featureText");
    var featureList = Model.Value<IEnumerable<BlockListItem>>("featureList");
}

<!-- Container for demo purpose -->
<div class="bg-gradient-to-r from-cyan-100 to-blue-300 px-2 sm:px-6">

  <!-- Section: Design Block -->
  <section class="py-16 text-gray-800">
    <div class="flex flex-wrap items-center">
      <div class="grow-0 shrink-0 basis-auto w-full lg:w-4/12 mb-6 md:mb-0 px-3">
        <h2 class="text-3xl font-bold mb-6">
          @Html.Raw(featureHeading)
        </h2>

        <p class="text-gray-500 mb-12">@Html.Raw(featureText)</p>
      </div>

      <div class="grow-0 shrink-0 basis-auto w-full lg:w-8/12 mb-6 mb-md-0 px-3">
        <div class="flex flex-wrap">
            <!--START LOOP-->
            @{
                foreach (var singleFeature in featureList)
                {
                    var content = singleFeature.Content;
                    
                    <div class="grow-0 shrink-0 basis-auto w-full lg:w-6/12 mb-12">
                        <div class="flex">
                            <div class="shrink-0 mt-1">
                                <svg class="w-4 h-4 text-blue-600" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
                                    <path fill="currentColor"
                                        d="M504 256c0 136.967-111.033 248-248 248S8 392.967 8 256 119.033 8 256 8s248 111.033 248 248zM227.314 387.314l184-184c6.248-6.248 6.248-16.379 0-22.627l-22.627-22.627c-6.248-6.249-16.379-6.249-22.628 0L216 308.118l-70.059-70.059c-6.248-6.248-16.379-6.248-22.628 0l-22.627 22.627c-6.248 6.248-6.248 16.379 0 22.627l104 104c6.249 6.249 16.379 6.249 22.628.001z"
                                    ></path>
                                </svg>
                            </div>
                            <div class="grow ml-4">
                                <p class="font-bold mb-1">@content.Value("FeatureHeading")</p>
                                <p class="text-gray-500">@content.Value("FeatureText")</p>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
      </div>
    </div>
  </section>
  <!-- Section: Design Block -->

</div>
<!-- Container for demo purpose -->